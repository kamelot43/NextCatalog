// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String   @id @default(cuid())
  brand        String
  slug         String
  title        String
  category     String
  year         Int
  priceRub     Int
  currency     String   @default("RUB")
  image        String?

  powerHp      Int
  transmission String
  drive        String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([brand, slug])
  @@index([brand])
  @@index([brand, category])
  @@index([brand, year])
}
